<% category_id = Category.where("title = ?", category)[0][:id] %> 

<div class="container">
  <h1>All posts for <%= category %></h1>
  <ul>
    <% posts = Post.where("category_id = ?", category_id).to_a %>
    <% if posts != [] %>
      <% posts.each do |post| %>
      <li>
        <%= post[:title] %><br>
        Price: <%= post[:price] %><br>
        Location: <%= post[:location] %><br>
        Description: <%= post[:post_content] %>
        <hr/>
      </li>
      <% end %>
      <% else %>
      <p>There are no posts in this category.</p>
      <% end %>
  </ul>
</div>