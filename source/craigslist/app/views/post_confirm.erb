<form action="/<%= @post.category_id %>/<%= @post.id %>" method="get">
  <input type="text" name='title' class='title' value="<%= @post.title %>">
  <input type="text" name='price' class='price' value="<%= @post.price %>">
  <br>
  <br>
  <textarea name="body" class='body'><%= @post.body %></textarea>
  <br><br>
  <p>Here's your super ultra secret Earl: localhost:9393/<%= @post.category_id %>/<%= @post.id %>/<%= @post.edit_url %></p>
  <input type="submit" value="Submit" id="edit_button">
</form>
<form action="/<%= @post.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Nah, nevermind. I didn't want to post anyway.">
</form>