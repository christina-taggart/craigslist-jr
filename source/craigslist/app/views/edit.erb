<div class="container">
  <h3 class="list">Editing post with the title '<%=@edited_post.title%>'</h3>
  <form action="/edit/<%=@edited_post.edit_key%>" method ="post">
    <select name="category_id">
      <option value=1>Apartments</option>
      <option value=2>Vehicles</option>
      <option value=3>Household Goods</option>
      <option value=4>Sporting Goods</option>
      <option value=5>Groceries</option>
    </select><br><br>

    <label for "title">Title:</label><br>
    <input type="text" name="title" value="<%=@edited_post.title%>"><br><br>

    <label for "description">Description:</label><br>
    <textarea cols="40" rows="10"  name="description"><%=@edited_post.description%></textarea><br><br>

    <label for "price">Price:</label><br>
    <input type="text" name="price" value="<%=@edited_post.price%>"><br><br>

    <label for "email">E-Mail:</label><br>
    <input type="text" name="email" value="<%=@edited_post.email%>"><br><br><br>
    <input type="submit" value="Edit your post"><br><br>
    <%if @error%>
      <p class= "error">Complete all fields. Price must be a number.</p>
    <%end%>
  </form>
</div>